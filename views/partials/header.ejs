        <a class="favorite" href="/favoritos">Favorite</a>
        <!-- Link a la pagina Favoritos -->
    </div>

    <div class="login">
        <!-- Dentro del div esta el link para logearse y el buscador -->
        <span id="user2">
            <i uk-icon="icon: user"></i>
            <p style="display:none; font-size: 20px;"></p>
        </span>

        <div id="searchbar" class="uk-navbar-right">

            <a class="uk-navbar-toggle" href="#modal-full" uk-search-icon uk-toggle></a>

